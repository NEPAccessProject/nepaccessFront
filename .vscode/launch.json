{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 3000,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}\\src\\"
        },
        {
            "name": "Launch Program",
            "program": "${workspaceFolder}/app.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:3000",
            "port": 3000,
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch NODE Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\src\\index.js"
        },
        {
            "name": "msedge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:3000",      // create-react-app's default port 3000
            "webRoot": "${workspaceRoot}/src",
            "preLaunchTask": "npm run start"        // Add prelaunch Task npm: start (defined in tasks.json)
        }
          
    ]
}